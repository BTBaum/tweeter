<h1>Listing tweets</h1>
  <div class="single-tweet container">
    <div class="col-md-12">
      <table>
        <thead>
          <tr>
            <th>Message</th>
            <th>User</th>
            <th colspan="3"></th>
          </tr>
        </thead>


      <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= tweet.message %></td>
            <td><span class="user-handle">@<%= tweet.user.handle %></span></td>
            <td><%= link_to 'Show', tweet %></td>
            <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
            <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Tweet', new_tweet_path %>
